---
// Importa Tailwind CSS
import '../styles/tailwind.css';
---

<header class="bg-white shadow-md fixed w-full top-0 z-50">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Logo -->
    <div class="text-2xl font-bold text-green-800">
      <a href="/" class="flex items-center">
        <img src="logo.png" alt="Logo UniPegaso" class="h-10 w-auto bg-white rounded p-1 mr-2">
        Project Work - Astro
      </a>
    </div>

    <!-- Menu principale -->
    <ul class="hidden md:flex space-x-6">
      <li>
        <a href="#projectDescr" class="text-gray-700 hover:text-green-600 transition-colors">Descrizione Progetto</a>
      </li>
      <li>
        <a href="#reportDescr" class="text-gray-700 hover:text-green-600 transition-colors">Descrizione Report</a>
      </li>
      <li>
        <a href="#aboutLavazza" class="text-gray-700 hover:text-green-600 transition-colors">Informazioni su Lavazza</a>
      </li>
      <li>
        <a href="/report" class="text-gray-700 hover:text-green-600 transition-colors">I report</a>
      </li>
    </ul>

    <!-- Bottone per il menu mobile -->
    <button class="md:hidden text-gray-700 focus:outline-none" id="mobile-menu-button">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
  </nav>

  <!-- Menu mobile (visibile solo su schermi piccoli) -->
  <div class="md:hidden hidden bg-white px-6 py-4 space-y-4" id="mobile-menu">
    <a href="#projectDescr" class="block text-gray-700 hover:text-green-600 transition-colors">Descrizione Progetto</a>
    <a href="#reportDescr" class="block text-gray-700 hover:text-green-600 transition-colors">Descrizione Report</a>
    <a href="#aboutLavazza" class="block text-gray-700 hover:text-green-600 transition-colors">Informazioni su Lavazza</a>
    <a href="/report" class="block text-gray-700 hover:text-green-600 transition-colors">I report</a>
  </div>
</header>

<!-- Script per il menu mobile -->
<script>
  document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu?.classList.toggle('hidden');
  });
</script>