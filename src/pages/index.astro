---
import Navbar from '../components/Navbar.astro';
import Layout from '../layouts/Layout.astro';
import DescrizioneProgetto from '../components/DescrizioneProgetto.astro';
import DescrizioneReport from '../components/DescrizioneReport.astro';
import InformazioniLavazza from '../components/InformazioniLavazza.astro';
---

<Layout>
  <Navbar />

  <!-- Hero Section -->
  <section class="bg-green-50 py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-green-900 mb-6">
        Benvenuto/a nel Project Work del Corso L-31
      </h1>
      <p class="text-lg md:text-xl text-gray-700 mb-8">
        Esplora i report di sostenibilità di 
        <span class="text-green-700 font-semibold">Lavazza</span>, 
        un'azienda leader nel settore del caffè con un forte impegno verso la sostenibilità.
      </p>
      <a href="#report-section" class="bg-green-700 text-white px-6 py-3 rounded-lg hover:bg-green-800 transition-colors">
        Scarica i Report
      </a>
    </div>
  </section>

  <!-- Sezione Descrizione Progetto -->
  <DescrizioneProgetto />

  <!-- Sezione Descrizione Report -->
  <DescrizioneReport />

  <!-- Sezione Informazioni su Lavazza -->
  <InformazioniLavazza />

  <!-- Sezione Report -->
  <section id="report-section" class="container mx-auto px-4 py-12">
    <h2 class="text-3xl font-bold text-green-900 mb-8 text-center">
      Download Report di Sostenibilità
    </h2>
    <div class="max-w-md mx-auto">
      <!-- Form di selezione -->
      <select id="year-select" class="block w-full p-3 border border-gray-300 rounded-lg shadow-sm focus:border-green-500 focus:ring focus:ring-green-200 focus:ring-opacity-50 mb-6">
        <option value="">Seleziona un anno</option>
        <option value="2021">2021</option>
        <option value="2022">2022</option>
        <option value="2023">2023</option>
      </select>
      <!-- Output -->
      <div id="output" class="text-center">
        <p class="text-gray-600">Seleziona un anno per visualizzare il report.</p>
      </div>
    </div>
  </section>

  <!-- Script per la gestione della selezione -->
  <script src="../../src/scripts/report-selector.js" type="module"></script>
</Layout>