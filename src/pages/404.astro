---
import Navbar from '../components/Navbar.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <Navbar />

  <!-- Sezione 404 -->
  <section class="min-h-screen flex flex-col items-center justify-center bg-gray-50 py-12">
    <div class="text-center">
      <!-- Titolo con 404 in grassetto-->
      <h1 class="text-6xl md:text-8xl font-bold text-gray-900 mb-4">404</h1>
      <!-- Sottotitolo -->
      <h2 class="text-2xl md:text-3xl font-semibold text-gray-700 mb-8">
        Oops! Pagina non trovata. 
      </h2>
      <!-- Messaggio -->
      <p class="text-lg text-gray-600 mb-8">
        Sembra che la pagina che stai cercando non esista o sia stata spostata.
      </p>
      <!-- Bottone per tornare alla home -->
      <a href="/" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition-colors">
        Torna alla Home Page
      </a>
    </div>
  </section>
</Layout>